// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String      @id @default(uuid())
  email   String   @unique
  password String? 
  firstname String?
  lastName String?
  username String?
  comments Comment[]
  image String?
}

model Movies {
  id      Int     @id @default(autoincrement())
  movie_id   Int   
  resolution    String?
  image_link    String?
  lasttime DateTime?
  isdownload Boolean?
  summary String?
  title String?
  rating String?
  productionYear Int?
}

model Comment {
  id    Int     @id @default(autoincrement())
  from  User @relation(fields: [fromId], references: [id])
  fromId String
  moviesId  Int
  comment   String
}