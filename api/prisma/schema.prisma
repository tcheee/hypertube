// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["aarch64-unknown-linux-musl"]
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String
  username String?
  comments Comment[]
  image String?
}

model Movies {
  id      Int     @id
  resolution    String
  image_link    String
  isDownload    Boolean
}

model Comment {
  id    Int     @id @default(autoincrement())
  from  User @relation(fields: [fromId], references: [id])
  fromId Int
  moviesId  Int
  comment   String
}