// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int         @id @default(autoincrement())
  uuid      String      @default(uuid())
  email     String      @unique
  password  String? 
  firstname String?
  lastname  String?
  username  String?
  comments  Comment[]
  image String?
}

model Movies {
  hash          String  @unique
  id            Int     @id @default(autoincrement())
  movieId       String   
  resolution    String?
  image_link    String?
  lastTimewatch Int
  isDownload    Boolean
  summary String?
  title String?
  rating String?
  productionYear Int?
}

model Comment {
  id            Int     @id @default(autoincrement())
  from          User    @relation(fields: [fromId], references: [id])
  fromId        Int
  movieId       String
  comment       String
}